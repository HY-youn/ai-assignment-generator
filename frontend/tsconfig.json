{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
       "types": ["vite/client"],   // ← 없으면 추가(선택 사항)
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}